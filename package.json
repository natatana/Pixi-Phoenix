{
  "name": "multi-game-project",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "install": "cd projects/song-quiz-pixi && npm install && cd ../dungeon-pixi && npm install && cd ../jeopardy-phaser && npm install && cd ../..",
    "dev:landing": "npx serve . -p 3000",
    "dev:song-quiz": "cd projects/song-quiz-pixi && npm run dev",
    "dev:dungeon": "cd projects/dungeon-pixi && npm run dev",
    "dev:jeopardy": "cd projects/jeopardy-phaser && npm run dev",
    "dev": "concurrently \"npm run dev:landing\" \"npm run dev:song-quiz\" \"npm run dev:dungeon\" \"npm run dev:jeopardy\"",
    "build": "cd projects/song-quiz-pixi && npm run build && cd ../dungeon-pixi && npm run build && cd ../jeopardy-phaser && npm run build && cd ../..",
    "storybook": "concurrently \"npm run dev\" \"storybook dev -p 6006\"",
    "build-storybook": "storybook build",
    "storybook:serve": "npx serve storybook-static -p 6007"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/html": "^8.4.7",
    "@storybook/html-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "concurrently": "^8.2.2",
    "serve": "^14.2.1",
    "storybook": "^8.4.7"
  },
  "dependencies": {
    "gsap": "^3.13.0",
    "howler": "^2.2.4",
    "phaser": "^3.90.0",
    "phaser3-rex-plugins": "^1.80.16",
    "pixi-filters": "^6.1.4",
    "pixi.js": "^8.12.0"
  }
} 